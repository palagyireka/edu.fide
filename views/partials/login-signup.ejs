<input type="checkbox" name="login-signup" id="login-signup" />
<label for="login-signup">
  <div>
    <img src="/css/login.png" alt="" />
    <p>
      Login or <br />
      sign up
    </p>
  </div>
</label>
<div id="login-signup-form-container">
  <div id="login-signup-forms">
    <div id="user-btns">
      <button>Log In</button>
      <button>Sign Up</button>
    </div>
    <form action="/login" method="post" id="login-form">
      <label for="user-email">Email:</label>
      <input
        type="email"
        name="email"
        id="user-email"
        placeholder="your.name@example.com"
      />
      <label for="user-password">Password:</label>
      <input type="password" name="password" id="user-password" />
      <button type="submit" class="fancytime">Log In</button>
    </form>
    <form action="/register" method="post" id="signup-form">
      <div class="names">
        <label for="first-name">First name:</label>
        <label for="first-name">Last name:</label>
      </div>
      <div class="names">
        <input type="text" name="firstName" id="first-name" />
        <input type="text" name="lastName" id="last-name" />
      </div>
      <div class="names">
        <label for="nuser-email">Email:</label>
        <label for="nuser-password">Password:</label>
      </div>
      <div class="names">
        <input
          type="email"
          name="email"
          id="nuser-email"
          placeholder="your.name@example.com"
        />

        <input type="password" name="password" id="nuser-password" />
      </div>
      <div class="names">
        <label for="workplace">Place of Work</label>
        <label for="job-title">Job title</label>
      </div>
      <div class="names">
        <input type="text" name="workplace" id="workplace" />
        <input type="text" name="jobtitle" id="job-title" />
      </div>
      <div class="names">
        <label for="country-residence">Country of Residence</label>
        <label for="resp-cie">Responsibilities in Chess and Education</label>
      </div>
      <div class="names">
        <input
          list="country-residence"
          id="country-residence-in"
          name="country-residence-in"
        />
        <datalist id="country-residence"></datalist>
        <textarea name="respCie" id="resp-cie"></textarea>
      </div>
      <div class="names">
        <input type="checkbox" name="newsletter" id="newsletter" />
        <label for="newsletter">Sign Up for quarterly Newsletter?</label>
      </div>
      <div class="names">
        <input type="checkbox" name="pripo" id="pripo" checked="checked" />
        <label for="pripo"
          >By registering you agree to our
          <a href="https://www.fide.com/privacy"> Privacy Policy </a>
        </label>
      </div>
      <button type="submit" class="fancytime">Sign Up</button>
    </form>
  </div>
</div>
<script src="/js/orszagkodok.js"></script>
<script src="/js/login-signup.js"></script>
