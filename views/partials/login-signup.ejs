<input type="checkbox" name="login-signup" id="login-signup" />
<label for="login-signup">
  <div>
    <img src="css/login.png" alt="" />
    <p>
      Login or <br />
      sign up
    </p>
  </div>
</label>
<div id="login-signup-form-container">
  <div id="login-signup-forms">
    <div id="user-btns">
      <button>Log In</button>
      <button>Sign Up</button>
    </div>
    <form action="" id="login-form">
      <label for="user-email">Email:</label>
      <input
        type="email"
        name=""
        id="user-email"
        placeholder="your.name@example.com"
      />
      <label for="user-password">Password:</label>
      <input type="password" name="" id="user-password" />
      <button type="submit">Log In</button>
    </form>
    <form action="" id="signup-form">
      <div class="names">
        <label for="first-name">First name:</label>
        <label for="first-name">Last name:</label>
      </div>
      <div class="names">
        <input type="text" name="" id="first-name" />
        <input type="text" name="" id="last-name" />
      </div>
      <div class="names">
        <label for="nuser-email">Email:</label>
        <label for="nuser-password">Password:</label>
      </div>
      <div class="names">
        <input
          type="email"
          name=""
          id="nuser-email"
          placeholder="your.name@example.com"
        />

        <input type="password" name="" id="nuser-password" />
      </div>
      <div class="names">
        <label for="workplace">Place of Work</label>
        <label for="job-title">Job title</label>
      </div>
      <div class="names">
        <input type="text" name="workplace" id="workplace" />
        <input type="text" name="job-title" id="job-title" />
      </div>
      <div class="names">
        <label for="country-residence">Country of Residence</label>
        <label for="resp-cie">Responsibilities in Chess and Education</label>
      </div>
      <div class="names">
        <select name="country-residence" id="country-residence"></select>
        <input
          type="text"
          name="resp-cie"
          id="resp-cie"
          required
          minlength="0"
          maxlength="400"
        />
      </div>
      <div class="names">
        <input type="checkbox" name="newsletter" id="newsletter" />
        <label for="newsletter">Sign Up for quarterly Newsletter?</label>
      </div>
      <button type="submit">Sign Up</button>
    </form>
  </div>
</div>
