<% layout('layouts/boilerplate') %>
<head>
  <script src="//cdn.quilljs.com/1.3.6/quill.js"></script>
  <script src="/js/image-resize.min.js"></script>
</head>
<main class="books">
  <p>Recommended Books</p>
  <% if (typeof currentUser !== "undefined"){if (currentUser.role === "admin")
  {%>
  <button class="fancytime"><a href="/newbooks/new">New Book</a></button>
  <% }} %>
  <div class="booksc">
    <% booksData.forEach((book)=>{ %>
    <div class="bookw">
      <% if(typeof currentUser !== "undefined"){if (currentUser.role ===
      "admin") { %>
      <div class="bookad">
        <form action="/newbooks/<%=book._id%>?_method=DELETE" method="post">
          <button class="fancytime">Delete</button>
        </form>
        <button class="fancytime">
          <a href="/newbooks/<%=book._id%>">Edit</a>
        </button>
      </div>
      <% }} %>
      <input type="checkbox" name="<%= book._id %>" id="<%= book._id %>" />
      <div class="bookpop">
        <label for="<%= book._id %>" class="booklbl">
          <img src="<%= book.image.url %>" alt="<%= book.title %>"
        /></label>
        <div class="booktxt" data-b="<%=JSON.stringify(book.text)%>">
          <div class="bookt"><%= book.title %></div>
          <div class="booka"><%= book.author %></div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</main>
<script src="/js/bookAll.js"></script>
