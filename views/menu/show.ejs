<% layout('layouts/boilerplate') %>
<main class="show-blogpost">
  <h2 class="title">
    <!--  style="background-image: url('<%= post.image %>')" -->
    <%= post.title %>
  </h2>
  <div class="text"><div class="text-body"></div></div>
  <% if (typeof currentUser !== "undefined") {if (currentUser.role === "admin")
  {%>
  <a href="/admin/<%= post.id %>/edit" class="fancytime">Edit</a>
  <form action="/admin/<%= post.id %>?_method=DELETE" method="post">
    <button class="fancytime">Delete</button>
  </form>
  <% }} %>
</main>

<script src="//cdn.quilljs.com/1.3.6/quill.js"></script>
<script src="/js/image-resize.min.js"></script>
<script src="/js/blog.js"></script>
