<% layout('layouts/boilerplate') %>
<main class="show-blogpost">
  <img src="<%= post.image %>" alt="" />
  <h2><%= post.title %></h2>
  <p><%= post.text %></p>
  <a href="/blog/<%= post.id %>/edit">Edit</a>
  <form action="/blog/<%= post.id %>?_method=DELETE" method="post">
    <button>Delete</button>
  </form>
</main>
