<% layout('layouts/boilerplate') %>

<main>
  <div class="reset-container">
    <div>
      Enter the email address associated with your account so we can send you a
      link to reset your password:
    </div>
    <form action="/resetpassword/request" method="post" class="reset-form">
      <label for="request-email">Email:</label>
      <input type="email" id="request-email" name="email" class="reset-input" />
      <button type="submit" class="fancytime reset-btn">Submit</button>
    </form>
  </div>
</main>
